<%- include('../layouts/adminheader.ejs') %>
<style>
    .button1 {
 position: relative;
 padding: 1em 1.8em;
 outline: none;
 border: 1px solid #303030;
 background: #212121;
 color: #fb0000;
 text-transform: uppercase;
 letter-spacing: 2px;
 font-size: 13px;
 overflow: hidden;
 transition: 0.2s;
 border-radius: 20px;
 cursor: pointer;
 font-weight: bold;
}

.button1:hover {
 box-shadow: 0 0 10px #fd0000, 0 0 25px #ff0000, 0 0 50px #ff0000;
 transition-delay: 0.6s;
}

.button1 .span1 {
 position: absolute;
}

.button1 .span1 :nth-child(1) {
 top: 0;
 left: -100%;
 width: 100%;
 height: 2px;
 background: linear-gradient(90deg, transparent, #ff0000);
}

.button1:hover span:nth-child(1) {
 left: 100%;
 transition: 0.7s;
}

.button1 .span1:nth-child(3) {
 bottom: 0;
 right: -100%;
 width: 100%;
 height: 2px;
 background: linear-gradient(90deg, transparent, #ff0000);
}

.button1:hover span:nth-child(3) {
 right: 100%;
 transition: 0.7s;
 transition-delay: 0.35s;
}

.button1 .span1:nth-child(2) {
 top: -100%;
 right: 0;
 width: 2px;
 height: 100%;
 background: linear-gradient(180deg, transparent, #ae00ff);
}
.button1:hover span:nth-child(2) {
 top: 100%;
 transition: 0.7s;
 transition-delay: 0.17s;
}

.button1 .span1:nth-child(4) {
 bottom: -100%;
 left: 0;
 width: 2px;
 height: 100%;
 background: linear-gradient(360deg, transparent, #001eff);
}

.button1:hover span:nth-child(4) {
 bottom: 100%;
 transition: 0.7s;
 transition-delay: 0.52s;
}

.button1:active {
 background: #ae00af;
 background: linear-gradient(to top right, #ae00af, #001eff);
 color: #bfbfbf;
 box-shadow: 0 0 8px #ae00ff, 0 0 8px #001eff, 0 0 8px #ae00ff;
 transition: 0.1s;
}

.button1:active span:nth-child(1) 
.span1:nth-child(2) 
.span1:nth-child(2) 
.span1:nth-child(2) {
 transition: none;
 transition-delay: none;
}
</style>
<div class="container mt-5">
  <div class="row tm-content-row">
    <div class="col-sm-12 col-md-12 col-lg-16 col-xl-16 tm-block-col">
      <div class="tm-bg-primary-dark tm-block tm-block-products">
        <div class="tm-product-table-container">
          <table class="table table-hover tm-table-small tm-product-table">
            <thead>
              <tr>
                    <th scope="col">SL NO.</th>
                  <th scope="col">ID</th>
                  <th scope="col">name</th>
                  <th scope="col">discription</th>
                  <th scope="col"></th>
                  <th scope="col"></th>
                  <th scope="col"></th>
                

                 
                </tr>
              </thead>
              <tbody>
         
                
                  <% if (bannerData.length>0) {
                      for(let i=0;i<bannerData.length;i++) { %>
                        <tr>
                
                  <td ><%= [i+1] %></td>
                  <td class="tm-product-name"><%= bannerData[i]._id %></td>
               
                  <td class="text-center"><%= bannerData[i].name %></td>
                  
                  <td class="text-center"><%= bannerData[i].description %></td>
                  <td><img style="height:5rem;width:10rem;" src="/productimage/<%= bannerData[i].Image %>" alt="<%= bannerData[i].Image %>"></td>
                  <td> <form action="/admin/delete-banner?id=<%= bannerData[i]._id %>" method="post">
                    <button onclick="formSubmit()" class="button1">
                        <span class="span1"></span>
                            <span class="span1"></span>
                            <span class="span1"></span>
                             <span class="span1"></span> delete
                                    </button></td>
                                    
                
                
                 
                     
                  
                  
              
                </tr>
                
                <% } %>
           
                <% } else {%>
                  <tr>
                    <td colspan="5">Product not found</td>

                  </tr>
                 <% } %>
       
               
                
               
                
               
               
               
               
              </tbody>
             
            </table>
          </div>
          <!-- table container -->
          <a
              href="/admin/add-banner"
              class="btn btn-primary btn-block text-uppercase mb-3">Add new banner</a>
   
         
        </div>
       
      </div>
  
      
        </div>
   
      </div>
   
    </div>
 
  </div>
  <script>
        function formSubmit() {
    event.preventDefault(); // prevent form submit
    let form = event.target.form; // storing the form
    swal({
        title: "Are you sure?",
        text: "You cannot retrieve the file ",
        type: "warning",
        showCancelButton: true,
        confirmButtonColor: "#d33",
        cancelButtonColor:"#DD6B55",
        confirmButtonText: "Yes, Delete it!",
        cancelButtonText: "No, cancel please!",
        closeOnConfirm: false,
        closeOnCancel: false,

    },
        function (isConfirm) {
            if (isConfirm) {
                form.submit();          // submitting the form when user press yes
            } else {
                swal("Cancelled", "Your file is safe :)", "error");
            }
        });
}

    </script>

