<%- include('../layouts/adminheader.ejs') %>
    <div class="container tm-mt-big tm-mb-big">
      <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
          <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
            <div class="row">
              <div class="col-12">
                <h2 class="tm-block-title d-inline-block">View Product</h2>
              </div>
            </div>
            <div class="row tm-edit-product-row">
              <div class="col-xl-6 col-lg-6 col-md-12">
                <!-- <form action="/admin/edit-product" method="post" class="tm-edit-product-form" enctype="multipart/form-data"> -->
                  <div class="form-group mb-3">
                    <label
                      for="name"
                      >Product Name
                    </label>
                    <input style="color: black;"
                  
                      name="productname"
                      type="text"
                      class="form-control validate"
                      value="<%= product.name %>"
                      disabled
                      required
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label
                      for="description"
                      >Description</label
                    >
                    <textarea disabled style="color: black;"
                      class="form-control validate"
                      rows="3"
                      name="description"
                      > "<%= product.description %>"
                    
                      
                    </textarea>
                  </div>
                  <div class="form-group mb-3">
                    <label
                      for="category"
                      >Category</label
                    >
                    
                  </div>
                  <div class="row">
                      <div class="form-group mb-3 col-xs-12 col-sm-6">
                          <label
                            
                            > Price
                          </label>
                          <input style="color: black;"
                        
                          name="price"
                          type="text"
                          class="form-control validate"
                          value="<%= product.price %>"
                          required
                          disabled
                          />
                        </div>
                        <div class="form-group mb-3 col-xs-12 col-sm-6">
                          <label
                            for="stocks available"
                            >Units In Stock
                          </label>
                          <input style="color: black;"
                           
                            name="stock"
                            type="text"
                            class="form-control validate"
                            value="<%= product.Instock %>"
                            required
                            disabled
                          />
                        </div>
                        <input type="hidden" name="id" value="<%= product.Instock %>">
                  </div>
                  
              </div>
              <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                <div class="tm-product-img-dummy mx-auto">
                    <td><img style="height:15rem;width:22rem;" src="/productimage/<%= product.Image[0] %>" alt="<%= product.Image[0] %>"></td>
                </div>
                
              </div>
              <!-- <div class="col-12">
                <button type="submit" class="btn btn-primary btn-block text-uppercase">Add Product Now</button>
              </div> -->
            </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <footer class="tm-footer row tm-mt-small">
        <div class="col-12 font-weight-light">
          <p class="text-center text-white mb-0 px-4 small">
            Copyright &copy; <b>2018</b> All rights reserved. 
            
            Design: <a rel="nofollow noopener" href="https://templatemo.com" class="tm-footer-link">Template Mo</a>
        </p>
        </div>
    </footer> 

    <script src="js/jquery-3.3.1.min.js"></script>
    <!-- https://jquery.com/download/ -->
    <script src="jquery-ui-datepicker/jquery-ui.min.js"></script>
    <!-- https://jqueryui.com/download/ -->
    <script src="js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/d4801b7ff5.js" crossorigin="anonymous"></script>
    <!-- https://getbootstrap.com/ -->
    <script>
      $(function() {
        $("#expire_date").datepicker();
      });
    </script>
  </body>
</html>
