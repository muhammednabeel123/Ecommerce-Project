<%- include('../layouts/adminheader.ejs') %>
    <div class="container tm-mt-big tm-mb-big">
      <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
          <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
            <div class="row">
              <div class="col-12">
                <h2 class="tm-block-title d-inline-block">Edit Product</h2>
              </div>
            </div>
            <div class="row tm-edit-product-row">
              <div class="col-xl-6 col-lg-6 col-md-12">
                <form action="" method="post" class="tm-edit-product-form" enctype="multipart/form-data">
                  <div class="form-group mb-3">
                    <label
                      for="name"
                      >Product Name
                    </label>
                    <input
                  
                      name="productname"
                      type="text"
                      class="form-control validate"
                      value="<%= products.name %>"
                      required
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label
                      
                      >Description</label
                    >
                    <textarea
                      class="form-control validate"  name="description" ><%= products.description %></textarea>
                
                    
                  
                  </div>
                  
                    <div class="form-group mb-3">
                      <label
                        for="category"
                        >Category</label
                      >
                      <select                                                                                                                             
                        class="custom-select tm-select-accounts"
                        id="category" name="category"  value="<%= products.category %>"
                      >
                      
                       <% for(category of categories){ %>
  
                        <option value="<%= category._id %>"><%= category.name %></option>
  
                      <% } %>
                      
                        
                      </select>
                 
                    
                  </div>
                  <div class="row">
                      <div class="form-group mb-3 col-xs-12 col-sm-6">
                          <label
                            
                            > Price
                          </label>
                          <input
                        
                          name="price"
                          type="text"
                          class="form-control validate"
                          value="<%= products.price %>"
                          required
                          />
                        </div>
                        <div class="form-group mb-3 col-xs-12 col-sm-6">
                          <label
                            for="stocks available"
                            >Units In Stock
                          </label>
                          <input
                           
                            name="stock"
                            type="text"
                            class="form-control validate"
                            value="<%= products.Instock %>"
                            required
                          />
                        </div>
                        
                  </div>
                  <input value="<%= products._id %>" name="id" type="hidden">
              </div>
              <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                
                <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
                  <% if (products.Image) {
                    %>
                    <div class="carousel-indicators">
                      <% for(let i=0; i<products.Image.length; i++) { %>
                        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="<%= i %>" class="<%= i === 0 ? 'active' : '' %>" aria-current="<%= i === 0 %>" aria-label="Slide <%= i + 1 %>"></button>
                      <% } %>
                    </div>
                
                    <div class="carousel-inner">
                      <% for(let i=0; i<products.Image.length; i++) { %>
                        <div class="carousel-item <%= i === 0 ? 'active' : '' %>" data-bs-interval="10000">
                          <img src="/productimage/<%= products.Image[i] %>" alt="<%= products.Image[i] %>" class="d-block w-100">
                          <div class="carousel-caption d-none d-md-block">
                            <a href="/admin/delete-image?id=<%= products.Image[i] %>"><h5>DELETE <%= i + 1 %> </h5></a>
                            
                          </div>
                        </div>
                      <% } %>
                    </div>
                  <% } %>
                </div>
                
                  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                  </button>
                  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                  </button>
                </div>
                <div class="custom-file mt-3 mb-3">
            
                <input type="file" name="image" style="color: aliceblue;"  multiple style="display:none;">
                <div class="col-12">
                <button type="submit" class="btn btn-primary btn-block text-uppercase">Edit Product Now</button>
              </div>
              </div>
             
            </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <footer class="tm-footer row tm-mt-small">
        <div class="col-12 font-weight-light">
          <p class="text-center text-white mb-0 px-4 small">
            Copyright &copy; <b>2018</b> All rights reserved. 
            
            Design: <a rel="nofollow noopener" href="https://templatemo.com" class="tm-footer-link">Template Mo</a>
        </p>
        </div>
    </footer> 

    <script src="js/jquery-3.3.1.min.js"></script>
    <!-- https://jquery.com/download/ -->
    <script src="jquery-ui-datepicker/jquery-ui.min.js"></script>
    <!-- https://jqueryui.com/download/ -->
    <script src="js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/d4801b7ff5.js" crossorigin="anonymous"></script>
    <!-- https://getbootstrap.com/ -->
    <script>
      $(function() {
        $("#expire_date").datepicker();
      });
    </script>
  </body>
</html>
