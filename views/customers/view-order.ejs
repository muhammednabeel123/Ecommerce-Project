  <div class="container py-5">
    <div class="row justify-content-center mb-3">
      <div class="col-md-12 col-xl-16">
        <div class="card shadow-0 border rounded-3">
          <div class="card-body">
           
            <% if ( productData.length>0) {
                for(let i=0;i<productData.length;i++) {
                     %>
