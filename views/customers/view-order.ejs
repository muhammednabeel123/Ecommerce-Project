<section class="vh-200" style="background-color: #dff0e2;">
    <div class="container py-5">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12">
          <div class="card card-stepper text-black" style="border-radius: 16px;">
  
            <div class="card-body p-5">
  
              <div class="d-flex justify-content-between align-items-center mb-5">
                <div>
                  
                </div>
                <div class="text-end">
                  <p class="mb-0">Expected Arrival <span><%= orderData.delivery_date %></span></p>
                  <p class="mb-0">ORDER_ID <span class="font-weight-bold"><%= orderData._id %></span></p>
                </div>
            
              </div>
              <% if(orderData.order_status ==='placed') { %>
              <ul id="progressbar-2" class="d-flex justify-content-between mx-0 mt-0 mb-5 px-0 pt-0 pb-2">
                <li class="step0 active text-center" id="step1"></li>
                <li class="step0 active text-center" id="step2"></li>
                <li class="step0 active text-center" id="step3"></li>
                <li class="step0 active text-center" id="step4"></li>
              </ul>
