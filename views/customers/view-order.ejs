                 <h4 class="mb-1 me-1"> &#X20B9;<%= orderData.products[i].pricetotal %></h4>
                  
                  
                </div>
                <h6 class="text-success">Free shipping</h6>
           
                <div class="d-flex flex-column mt-4">
                
                </div>
              </div>
            </div>
            <% } }%>
            <div>
      
              </div>
    
          </div>
        
        </div >
        <div style="float: right;">
          <% if(orderData.order_status === " Cancelled" || orderData.order_status === "returned") { %>
            <a href="/cancel-order/?id=<%= orderData._id %>" data-bs-toggle="modal" data-bs-target="#exampleModal"><button type="button" class="btn btn-danger mt-4 " disabled >Cancelled</button></a>

         
           <% } else { %>
            <a href="/cancel-order/?id=<%= orderData._id %>" data-bs-toggle="modal" data-bs-target="#exampleModal"><button type="button" class="btn btn-danger mt-4 ">Cancel Order</button></a>
            <% } %>
           
            </div>
            
     
      </div>
    </div>
    
    
  </div>
</section>
</div>
       

            
  
          </div>
        </div>
       
      </div>
